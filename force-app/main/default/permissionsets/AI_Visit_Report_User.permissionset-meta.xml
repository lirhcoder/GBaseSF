<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Permission set for AI Visit Report application users</description>
    <hasActivationRequired>false</hasActivationRequired>
    <label>AI Visit Report User</label>
    <license>Salesforce</license>

    <!-- Apex Class Access -->
    <classAccesses>
        <apexClass>ClaudeAPIService</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>VisitReportController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>VisitReportPDFController</apexClass>
        <enabled>true</enabled>
    </classAccesses>

    <!-- Object Permissions -->
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>Visit_Report__c</object>
        <viewAllRecords>false</viewAllRecords>
    </objectPermissions>

    <!-- Field Permissions -->
    <fieldPermissions>
        <editable>true</editable>
        <field>Visit_Report__c.Visit_Date__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Visit_Report__c.Account__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Visit_Report__c.Contact__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Visit_Report__c.Company_Name__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Visit_Report__c.Contact_Name__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Visit_Report__c.Contact_Title__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Visit_Report__c.Visit_Purpose__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Visit_Report__c.Discussion_Summary__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Visit_Report__c.Next_Actions__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Visit_Report__c.Opportunity_Amount__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Visit_Report__c.Expected_Close_Date__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Visit_Report__c.Raw_Input__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Visit_Report__c.AI_Analysis__c</field>
        <readable>true</readable>
    </fieldPermissions>

    <!-- Tab Access -->
    <tabSettings>
        <tab>Visit_Report__c</tab>
        <visibility>Visible</visibility>
    </tabSettings>
    <tabSettings>
        <tab>AI_Visit_Report</tab>
        <visibility>Visible</visibility>
    </tabSettings>

    <!-- Page Access -->
    <pageAccesses>
        <apexPage>VisitReportPDF</apexPage>
        <enabled>true</enabled>
    </pageAccesses>
</PermissionSet>
