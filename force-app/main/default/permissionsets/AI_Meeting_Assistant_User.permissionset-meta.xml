<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Permission set for AI Meeting Assistant application users</description>
    <hasActivationRequired>false</hasActivationRequired>
    <label>AI Meeting Assistant User</label>
    <license>Salesforce</license>

    <!-- Apex Class Access -->
    <classAccesses>
        <apexClass>WhisperAPIService</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>GBaseApiService</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>GBaseMeetingController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>GBaseAPIController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>NLAssistantController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>ClaudeAPIService</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>GBaseWebhookHandler</apexClass>
        <enabled>true</enabled>
    </classAccesses>

    <!-- GBase_Meeting__c Object Permissions -->
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>GBase_Meeting__c</object>
        <viewAllRecords>true</viewAllRecords>
    </objectPermissions>

    <!-- GBase_Document__c Object Permissions -->
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>GBase_Document__c</object>
        <viewAllRecords>true</viewAllRecords>
    </objectPermissions>

    <!-- Tab Access -->
    <tabSettings>
        <tab>AI_Meeting_Recorder</tab>
        <visibility>Visible</visibility>
    </tabSettings>
    <tabSettings>
        <tab>GBase_Meeting__c</tab>
        <visibility>Visible</visibility>
    </tabSettings>
    <tabSettings>
        <tab>GBase_Document__c</tab>
        <visibility>Visible</visibility>
    </tabSettings>
</PermissionSet>
