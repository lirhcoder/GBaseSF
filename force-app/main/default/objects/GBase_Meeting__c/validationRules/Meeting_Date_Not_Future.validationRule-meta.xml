<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Meeting_Date_Not_Future</fullName>
    <active>true</active>
    <description>Meeting date cannot be in the future</description>
    <errorConditionFormula>AND(
    NOT(ISBLANK(Meeting_Date__c)),
    DATEVALUE(Meeting_Date__c) &gt; TODAY()
)</errorConditionFormula>
    <errorDisplayField>Meeting_Date__c</errorDisplayField>
    <errorMessage>Meeting date cannot be in the future</errorMessage>
</ValidationRule>
