<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Audio_URL_Format</fullName>
    <active>true</active>
    <description>Validates that Audio URL starts with https://</description>
    <errorConditionFormula>AND(
    NOT(ISBLANK(Audio_URL__c)),
    NOT(BEGINS(Audio_URL__c, &quot;https://&quot;))
)</errorConditionFormula>
    <errorDisplayField>Audio_URL__c</errorDisplayField>
    <errorMessage>Audio URL must start with https://</errorMessage>
</ValidationRule>
